{
	"private": true,
	"name": "@monoexpo/monorepo",
	"scripts": {
		"dev": "turbo dev --parallel",
		"dev:clear": "turbo dev:clear --parallel",
		"deploy": "vercel deploy",
		"clean": "rm -rf .expo .turbo node_modules",
		"expo:prebuild": "EXPO_USE_METRO_WORKSPACE_ROOT=1 cd apps/expo && npx expo prebuild --platform ios; open ios/monoexpo.xcworkspace",
		"expo:start": "EXPO_USE_METRO_WORKSPACE_ROOT=1 cd apps/expo && npx expo start",
		"expo:start -c": "EXPO_USE_METRO_WORKSPACE_ROOT=1 cd apps/expo && npx expo start -c",
		"db:push": "drizzle-kit push:pg --config=drizzle.config.ts",
		"db:studio": "drizzle-kit studio --config=drizzle.config.ts",
		"db:generate": "drizzle-kit generate:pg --config=drizzle.config.ts",
		"format": "prettier --write \"**/*.{ts,tsx,md}\"",
		"dev-env": "dotenv -- turbo dev",
		"preinstall": "npx only-allow pnpm"
	},
	"devDependencies": {
		"@monoexpo/typescript": "workspace:*",
		"dotenv-cli": "latest",
		"drizzle-kit": "^0.20.14",
		"prettier": "^3.1.0",
		"turbo": "latest"
	},
	"pnpm": {
		"peerDependencyRules": {
			"ignoreMissing": [
				"@babel/*",
				"expo-modules-*",
				"typescript"
			]
		}
	},
	"prettier": {
		"printWidth": 100,
		"tabWidth": 2,
		"singleQuote": true,
		"trailingComma": "es5"
	}
}
